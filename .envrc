# direnv configuration for automatic environment loading
# Install direnv: https://direnv.net/

# Use flakes if available, otherwise fall back to shell.nix
if has nix_direnv_version || has nix; then
  if [ -f flake.nix ]; then
    echo "Loading Nix flake environment..."
    use flake
  elif [ -f shell.nix ]; then
    echo "Loading Nix shell environment..."
    use nix
  fi
fi

# Add node_modules/.bin to PATH
PATH_add node_modules/.bin

# Optional: Load .env file if it exists
dotenv_if_exists